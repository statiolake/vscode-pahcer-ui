{
	"name": "vscode-pahcer-ui",
	"displayName": "Pahcer UI",
	"description": "UI for Pahcer",
	"repository": "https://github.com/statiolake/vscode-pahcer-ui",
	"publisher": "statiolake",
	"author": "statiolake",
	"license": "MIT",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.104.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./dist/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "pahcer",
					"title": "Pahcer",
					"icon": "$(rocket)"
				}
			]
		},
		"views": {
			"pahcer": [
				{
					"id": "pahcerResults",
					"name": "Test Results"
				}
			]
		},
		"commands": [
			{
				"command": "vscode-pahcer-ui.run",
				"title": "テストを実行",
				"icon": "$(play)"
			},
			{
				"command": "vscode-pahcer-ui.refresh",
				"title": "結果を更新",
				"icon": "$(refresh)"
			},
			{
				"command": "vscode-pahcer-ui.switchToSeed",
				"title": "Seedごとにグルーピング",
				"icon": "$(arrow-swap)"
			},
			{
				"command": "vscode-pahcer-ui.switchToExecution",
				"title": "実行ごとにグルーピング",
				"icon": "$(arrow-swap)"
			},
			{
				"command": "vscode-pahcer-ui.toggleComparisonMode",
				"title": "比較モードを切り替え",
				"icon": "$(graph-line)"
			},
			{
				"command": "vscode-pahcer-ui.addComment",
				"title": "コメントを追加"
			},
			{
				"command": "vscode-pahcer-ui.changeSortOrder",
				"title": "並び順を変更",
				"icon": "$(list-filter)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "vscode-pahcer-ui.run",
					"when": "view == pahcerResults",
					"group": "navigation@1"
				},
				{
					"command": "vscode-pahcer-ui.refresh",
					"when": "view == pahcerResults",
					"group": "navigation@2"
				},
				{
					"command": "vscode-pahcer-ui.toggleComparisonMode",
					"when": "view == pahcerResults",
					"group": "navigation@3"
				},
				{
					"command": "vscode-pahcer-ui.changeSortOrder",
					"when": "view == pahcerResults",
					"group": "navigation@4"
				},
				{
					"command": "vscode-pahcer-ui.switchToSeed",
					"when": "view == pahcerResults && pahcer.groupingMode == byExecution",
					"group": "navigation@5"
				},
				{
					"command": "vscode-pahcer-ui.switchToExecution",
					"when": "view == pahcerResults && pahcer.groupingMode == bySeed",
					"group": "navigation@5"
				}
			],
			"view/item/context": [
				{
					"command": "vscode-pahcer-ui.addComment",
					"when": "view == pahcerResults && viewItem == execution"
				}
			]
		},
		"configuration": {
			"title": "Pahcer UI",
			"properties": {
				"pahcer.groupingMode": {
					"type": "string",
					"enum": [
						"byExecution",
						"bySeed"
					],
					"default": "byExecution",
					"description": "表示モード (実行ごと / Seedごと)"
				},
				"pahcer.executionSortOrder": {
					"type": "string",
					"enum": [
						"seedAsc",
						"seedDesc",
						"relativeScoreAsc",
						"relativeScoreDesc",
						"absoluteScoreAsc",
						"absoluteScoreDesc"
					],
					"enumDescriptions": [
						"シードの昇順",
						"シードの降順",
						"相対スコアの昇順",
						"相対スコアの降順",
						"絶対スコアの昇順",
						"絶対スコアの降順"
					],
					"default": "seedAsc",
					"description": "実行ごと表示時のソート順"
				},
				"pahcer.seedSortOrder": {
					"type": "string",
					"enum": [
						"executionAsc",
						"executionDesc",
						"absoluteScoreAsc",
						"absoluteScoreDesc"
					],
					"enumDescriptions": [
						"実行の昇順",
						"実行の降順",
						"絶対スコアの昇順",
						"絶対スコアの降順"
					],
					"default": "executionDesc",
					"description": "Seedごと表示時のソート順"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "pnpm run build",
		"compile": "pnpm run check-types && pnpm run lint && node esbuild.js && node esbuild.chartjs.js",
		"build": "pnpm run check-types && pnpm run lint && node esbuild.js --production && node esbuild.chartjs.js --production",
		"package": "vsce package",
		"check-types": "tsc --noEmit",
		"lint": "eslint src",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"biome:check": "biome check .",
		"biome:fix": "biome check --write .",
		"prepare": "husky"
	},
	"lint-staged": {
		"*.{js,ts,json}": [
			"biome format --write"
		],
		"*.{js,ts}": [
			"biome check --write"
		]
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.5",
		"@types/mocha": "^10.0.10",
		"@types/node": "22.x",
		"@types/vscode": "^1.104.0",
		"@typescript-eslint/eslint-plugin": "^8.45.0",
		"@typescript-eslint/parser": "^8.45.0",
		"@vscode/test-cli": "^0.0.11",
		"@vscode/test-electron": "^2.5.2",
		"@vscode/vsce": "^3.6.2",
		"chart.js": "^4.5.0",
		"esbuild": "^0.25.10",
		"eslint": "^9.36.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.3",
		"npm-run-all": "^4.1.5",
		"typescript": "^5.9.3"
	}
}
